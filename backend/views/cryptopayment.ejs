<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">

  <link rel="stylesheet" href="css/payment2.css">
  <script src="https://kit.fontawesome.com/d7be8fed92.js" crossorigin="anonymous"></script>
  <title>Crypto Payment</title>
</head>

<body id="home">

  <div class="messageDiv">

    <p><%=message %></p>

  </div>

    <main class="container">

        <section class="container-tophalf">

            <!--============== Navigation Bar ===================== -->


            <header class="container-nav">
                <img src="img/logo-big.png" alt="logo" class="logo">

                <nav>
                    <ul class="nav-bar">
                      <li class="nav-links"> <a href="/dashboard" class="nav-items">Home</a> </li>
                      <li class="nav-links"> <a href="/connect" class="nav-items">Connect Account</a> </li>
                        <li class="nav-links"> <a href="/load" class="nav-items">Load Money</a> </li>
                        <li class="nav-links"> <a href="/payment" class="nav-items">Payment</a> </li>
                          <li class="nav-links"> <a href="/transactions" class="nav-items">Transactions and Graph</a> </li>

                    </ul>
                </nav>

              <a href="/" class="login"><button class="btn">Logout</button> </a>
            </header>

            </section>


            <div id="cryptoWallet">
              <div class="dw">
                <h1>Pay Using Crypto Wallet</h1>
              </div>

              <br>
              <br>

              <h3>Choose type of Crypto Currency :</h3>


              <form action="/cryptopayment" method="post">

                <% connectedCryptos.forEach(function(item){ %>

                    <input type="radio" name="selectedCrypto" value="<%=item.cryptoname%>">
                    <p style="display: inline"> <%= item.cryptoname%>  </p>
                    <br>


              <%  }) %>





                <!-- <input type="radio" name="selectedCrypto" value="Bitcoin" class="cryptoType">
                <label for="crypto1">Bitcoin</label>


                <input type="radio" name="selectedCrypto" value="Dogecoin" class="cryptoType">
                <label for="crypto2">Dogecoin</label>

                <input type="radio" name="selectedCrypto" value="Etherium" class="cryptoType">
                <label for="crypto3">Etherium</label> -->




                <br>
                <br>

                <table>
                  <tr>
                    <td align="left"><h3>Enter your Crypto's Username : </h3></td>
                    <td align="left"><input type="text" name="username" class="Box"></td>
                  </tr>
                  <tr>
                    <td align="left"><h3>Enter Amount to Pay : </h3></td>
                    <td align="left"><input type="number" step="0.01" name="paymentAmount" class="Box"></td>
                  </tr>

                  <tr>
                    <td align="left"><h3>Enter Recipientâ€™s wallet address : </h3></td>
                    <td align="left"><input type="text" name="walletAddress" class="Box"></td>
                  </tr>
                  <tr>
                    <td align="left">  <h3>Enter Your Password : </h3></td>
                    <td align="left"><input type="password" name="password" class="Box"></td>
                  </tr>
                </table>

                <button type="submit" name="pay" class="btn btn-lg">Pay</button>
              </form>
            </div>

        </main>
    </body>
</html>
